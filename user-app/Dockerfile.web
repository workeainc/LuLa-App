# Dockerfile for User App Web Version
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    dumb-init \
    && addgroup -g 1001 -S nodejs \
    && adduser -S nodejs -u 1001

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --legacy-peer-deps && npm cache clean --force

# Install web dependencies
RUN npx expo install react-native-web react-dom @expo/metro-runtime

# Apply web compatibility patch for @stream-io/react-native-webrtc
RUN sed -i "s/import { NativeModules, PermissionsAndroid, Platform } from 'react-native';/import { NativeModules, Platform } from 'react-native';\nimport { PermissionsAndroid } from '\/app\/web-compat.js';/" node_modules/@stream-io/react-native-webrtc/lib/module/Permissions.js

# Copy application code
COPY . .

# Create logs directory and fix permissions
RUN mkdir -p logs && \
    chown -R nodejs:nodejs logs && \
    chown -R nodejs:nodejs /app

# Switch to non-root user
USER nodejs

# Expose port
EXPOSE 19006

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:19006', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })"

# Start web application
ENTRYPOINT ["dumb-init", "--"]
CMD ["npm", "run", "web", "--", "--host", "lan"]
