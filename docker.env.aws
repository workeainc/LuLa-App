# AWS Docker Environment Configuration
NODE_ENV=production
PORT=5000

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongodb-password-here
MONGO_DATABASE=lula
MONGODB_URI=mongodb://admin:your-secure-mongodb-password-here@mongodb:27017/lula?authSource=admin

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-aws-production-change-this
JWT_EXPIRE=7d

# Stream.io Configuration
STREAM_API_KEY=your-stream-api-key
STREAM_API_SECRET=your-stream-api-secret

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=lula-media-storage

# Domain Configuration (Update these with your actual AWS domain/IP)
BACKEND_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com
ADMIN_URL=https://admin.yourdomain.com
USER_APP_URL=https://yourdomain.com/user
STREAMER_APP_URL=https://yourdomain.com/streamer
WS_URL=wss://api.yourdomain.com

# Coin System Configuration
COIN_RATE_PER_MINUTE=49
COMMISSION_PERCENTAGE=30
MINIMUM_BALANCE=49

# Twilio Configuration (for OTP)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Security Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com,https://api.yourdomain.com
CORS_ORIGIN=https://yourdomain.com

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# Performance Configuration
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Logging Configuration
LOG_LEVEL=info
ENABLE_METRICS=true
